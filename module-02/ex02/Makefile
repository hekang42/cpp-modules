NAME	= My_First_Orthodox_Class

GCCFLAG = -Wall -Werror -Wextra

RM		= rm -f

SRCS	= main.cpp Fixed.cpp

all		: $(NAME)

$(NAME) : $(SRCS)
		clang++ $(GCCFLAG) $(SRCS) -o $@

clean	:
		$(RM) $(NAME)

re		: clean all

.PHONY: all clean re